<div class="login-container">
  <div class="login-box">
    <h1>Welcome to Professor Dashboard</h1>
    <p>Please log in to access your dashboard.</p>
    
    <% if flash[:alert].present? %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <% if flash[:notice].present? %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <div class="login-button">
      <a href="<%= @keycloak_url %>" class="btn-primary">
        <i class="fas fa-sign-in-alt"></i> Login with Keycloak
      </a>
    </div>
  </div>
</div>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f5f7fa;
  }
  
  .login-box {
    width: 100%;
    max-width: 480px;
    padding: 40px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  h1 {
    margin-bottom: 16px;
    color: #1a202c;
  }
  
  p {
    margin-bottom: 32px;
    color: #4a5568;
  }
  
  .login-button {
    margin-top: 24px;
  }
  
  .btn-primary {
    display: inline-block;
    padding: 12px 24px;
    background-color: #3b82f6;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  
  .btn-primary:hover {
    background-color: #2563eb;
  }
  
  .alert {
    padding: 12px;
    margin-bottom: 24px;
    border-radius: 4px;
  }
  
  .alert-danger {
    background-color: #fee2e2;
    color: #b91c1c;
  }
  
  .alert-info {
    background-color: #e0f2fe;
    color: #0369a1;
  }
</style> 